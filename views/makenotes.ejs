<html lang="en">
<%- include("./components/header.ejs") %>

<body>
  <%- include("./components/navbar.ejs") %>

  <div class="card" style="width: 65%;margin: 6%;">
    <div class="card-header">
    </div>
    <div class="card-body">
      <h5 class="card-title">
        <!-- <span class="iconify" data-icon="emojione:notebook-with-decorative-cover"></span> -->
      </h5>
      <p class="card-text">
        <form action="/mynotes" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>
          <div class="mb-3">
            <label for="snippet" class="form-label">Topic</label>
            <input type="text" class="form-control" id="snippet" name="snippet" required>
          </div>
          <div class="mb-3">
            <label for="body" class="form-label">Note</label>
            <input type="password" class="form-control" id="body" name="body" required>
          </div>
          
          <button type="submit" class="btn btn-success">Add Note</button>
        </form>
  
      </p>
      
    </div>
  </div>

  <%- include("./components/footer.ejs") %>
</body>
</html>

